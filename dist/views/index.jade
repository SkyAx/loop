extends layouts/main

block anyLinks
  link(href='/css/main.css', rel='stylesheet')

block extendHeader
  .header-bottom.container
    h1 Веб-Студия в Нью-Йорке
    p Специализирующаяся на Дизайне, Программной разработке и Интернет-Маркетинге
  .offers.container
    h2 Что мы можем сделать для вас?
    ul.offers-list
      li.offers-item Веб-сайт
      li.offers-item Приложение
      li.offers-item Реклама
    form.offers-send
      input(type='text' name='name' placeholder='Имя')
      input(type='text' name='phone' placeholder='Телефон')
      input(type='text' name='email' placeholder='Email')
      .budget
        input(type='range' min='500' max='30000' step='100' name='name' value='3000')
        span.budget-count
          
      input.btn.action.to-send(type='submit' value='Отправить')  

